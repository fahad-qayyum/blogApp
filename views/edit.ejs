<% include partials/header%>
    <div class="ui container main text segment" id="afterNav">
        <div class="ui header huge ">Edit <%= blog.name%></div>
        <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[name]" value="<%= blog.name%>">
            </div>
            <div class="field">
                <label>Image URL</label>
                <input type="text" name="blog[img]" value="<%= blog.img%>">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[desc]" ><%= blog.desc%></textarea>
            </div>
              <button class="ui blue basic button" type="submit">Update</button>
        </form>
    </div>
    <% include partials/footer%>
